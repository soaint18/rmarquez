@using ControlHoras.Models
@{ Usuario usu = (Usuario)Session["Usuario"];}

<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Control horas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (usu != null && usu.Cargo.ToString().Contains("jefe"))
                    {
                        <li>@Html.ActionLink("Proyectos", "Proyectos", "Jefe")</li>
                    }
                    <li>@Html.ActionLink("Entrada Horas", "MisProyectos", "Emple")</li>
                    <li>@Html.ActionLink("Listados", "Listar", "Lista")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Session["Usuario"] == null)
                    {
                        <li>@Html.ActionLink("HOME", "Login", "Home")</li>
                    }
                    else if (usu != null && usu.Cargo.ToString().Contains("jefe"))
                    {
                        <li>@Html.ActionLink("HOME", "Proyectos", "Jefe")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("HOME", "MisProyectos", "Emple")</li>
                    }
                    @if (Session["Usuario"] == null)
                    {
                        <li>@Html.ActionLink("INICIAR SESION", "Login", "Home")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("CERRAR SESION", "Logout", "Home")</li>
                    }
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" style="margin-top:20px">
        @RenderBody()
        <hr />

        <footer>
            
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

